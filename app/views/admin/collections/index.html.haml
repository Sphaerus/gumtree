%h1= title "Collections"

%p= link_to "New", new_admin_collection_path

= render_breadcrumbs

%table
	%th= "Name"
	%th
	
	- @collections.each do |collection|
		%tr
			%td= link_to collection.name, admin_collection_path(collection)
			%td
				= link_to "Edit", edit_admin_collection_path(collection)
				= link_to "Delete", admin_collection_path(collection), method: :delete